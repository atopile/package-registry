{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "redirects": [ {
    "source": "/firebase/**",
    "destination": "https://www.firebase.com",
    "type": 302
  } ],

  "hosting": {
    "public": "package-registry-frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },

  "emulators": {
    "auth": {
      "port": 9099
    },
    "database": {
      "port": 9040
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
